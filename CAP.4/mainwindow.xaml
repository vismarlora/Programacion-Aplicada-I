<Window x:Class="Capitulo_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_4"
        mc:Ignorable="d"
        Title="Capitulo_4" Height="100" Width="400">
    <Grid>

        <StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content=" Ejercicios :" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="Ejercicio1Button" Width="60" Height="20" Margin="5,0" Content="Ejercicio 1" Click="Ejercicio1Button_Click"/>
                    <Button x:Name="Ejercicio2Button" Width="60" Height="20" Margin="5,0" Content="Ejercicio 2" Click="Ejercicio2Button_Click"/>
                    <Button x:Name="Ejercicio5Button" Width="60" Height="20" Margin="5,0" Content="Ejercicio 5" Click="Ejercicio5Button_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
