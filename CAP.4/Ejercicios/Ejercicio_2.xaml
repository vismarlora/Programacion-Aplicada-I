<Window x:Class="Capitulo_4.Ejercicio_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_4"
        mc:Ignorable="d"
        Title="Ejercicio_2" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,5">
            <StackPanel Orientation="Vertical" Margin="0,5">
                <Label Content="Ingrese el numero : "  HorizontalAlignment="Left"/>
                <TextBox Name="NumeroTextBox" Height="15" Width="120" HorizontalAlignment="Left" Margin="5,0"/>
                <Label Content="Ingrese la potencia: "  HorizontalAlignment="Left"/>
                <TextBox Name="PotenciaTextBox" Height="15" Width="120" HorizontalAlignment="Left" Margin="5,0"/>
                <Button x:Name="CalcularButton" Height="20" Width="50" HorizontalAlignment="Left" Margin="5,8" Content="Calcular" Click="CalcularButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
