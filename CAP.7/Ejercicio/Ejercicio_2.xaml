<Window x:Class="Capitulo_7.Ejercicio.Ejercicio_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_7.Ejercicio"
        mc:Ignorable="d"
        Title="Ejercicio_2  Diccionario" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Listado de Palabras: " Margin="5,0"/>
                <ListView x:Name="PalabrasListView" Height="100" Width="200" HorizontalAlignment="Left" Margin="10,0,0,20"/>

                <Label Content="Digite la palabra que desea conocer su concepto: " Margin="5,0"/>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="PalabraTextBox" Height="20" Width="150" HorizontalAlignment="Left" Margin="10,0"/>
                <Button x:Name="BuscarButton" Height="20" Width="60" Content="Concepto" Click="BuscarButton_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBox x:Name="DescripcionTextBox" Height="100" Margin="10"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
