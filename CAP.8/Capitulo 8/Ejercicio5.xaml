<Window x:Class="CAP._8.Capitulo_8.Ejercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAP._8.Capitulo_8"
        mc:Ignorable="d"
        Title="Ejercicio 5" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Label Content="Digite la cadena 1 "/>
                <TextBox x:Name="Cadena1TextBox" Height="20" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Label Content="Digite la cadena 2 "/>
                <TextBox x:Name="Cadena2TextBox" Height="20" Width="200"/>
            </StackPanel>
            <Button x:Name="MostrarCadenasButton" Margin="85,20,0,0" Content="Mostrar las cadenas en orden alfabetico" Height="35" Width="230" Click="MostrarCadenasButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
