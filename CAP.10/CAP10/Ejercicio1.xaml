<Window x:Class="CAP._10.CAP10.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAP._10.CAP10"
        mc:Ignorable="d"
        Title="Ejercicio 1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="IngresarButton" Content="Introducir Productos de la Tienda" Width="190" Margin="20,20,0,0" HorizontalAlignment="Left" Click="IngresarButton_Click" />
                
                <Label Content="Productos Guardados del Inventario de la Tienda: " Margin="15,20,0,0"/>
                
                <ListBox x:Name="MostrarListBox" Width="600" Height="300" Margin="20,5,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
