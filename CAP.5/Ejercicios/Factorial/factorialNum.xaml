<Window x:Class="MenuEjercicios5.Ejercicios.Factorial.fNumero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuEjercicios5.Ejercicios.Factorial"
        mc:Ignorable="d"
        Title="Factorial de un numero" Height="100" Width="250">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <Label x:Name="NumeroLabel" Content="Ingrese un numero"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NumeroTextBox" Height="26" Width="150"  HorizontalAlignment="Left"/>
                    <Button x:Name="CalcularButton" Content="Calcular" Click="CalcularButton_Click"/>
                </StackPanel>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
