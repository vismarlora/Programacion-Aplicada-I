<Window x:Class="CAP._12.CAP12.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAP._12.CAP12"
        mc:Ignorable="d"
        Title="Ejercicio 2" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="20">
            <Label Content="Digite un numero para saber su Factorial: "/>

            <TextBox x:Name="NumeroTextBox" Height="25" Width="50" HorizontalAlignment="Center"/>

            <Button x:Name="ObservarButton" Margin="10" Content="Observar" Height="25" Width="50" HorizontalAlignment="Center" Click="ObservarButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
